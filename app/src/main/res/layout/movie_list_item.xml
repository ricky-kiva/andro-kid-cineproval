<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@tools:sample/backgrounds/scenic[0]">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_bottom_gradient"
            android:gravity="bottom"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tv_list_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="Spider-Man: Across the Spider-Verse" />

            <TextView
                android:id="@+id/tv_list_item_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="May 31, 2023"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>