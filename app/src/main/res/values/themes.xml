<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.KidCineproval" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/BLUE_LV1</item>
        <item name="colorPrimaryVariant">@color/BLUE_LV2</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/YELLOW</item>
        <item name="colorSecondaryVariant">@color/white_trans_LV1</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="actionOverflowButtonStyle">@style/OvrOverflowOnPrimary</item>
        <item name="actionOverflowMenuStyle">@style/OvrOverflowBackground</item>
        <item name="android:windowBackground">?attr/colorPrimary</item>
    </style>

    <style name="Theme.KidCineproval" parent="Base.Theme.KidCineproval" />

    <style name="OvrOverflowOnPrimary" parent="@style/Widget.AppCompat.ActionButton.Overflow" >
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>

    <style name="OvrOverflowBackground" parent="@style/Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:popupBackground">?attr/colorPrimary</item>
        <item name="android:popupElevation">3dp</item>
    </style>
</resources>